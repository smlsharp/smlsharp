  fun rebindFunE (FunE, symbol, funEEntry) =
      SymbolEnv.insert(FunE, symbol, funEEntry) 

  (* insert function *)
  fun reinsertFunE (FunE, symbol, funEEntry) =
      SymbolEnv.insert(FunE, symbol, funEEntry) 


