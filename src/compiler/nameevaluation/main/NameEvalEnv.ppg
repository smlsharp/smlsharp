          val newEnv = rebindTstrLongsymbol(env, path, tstr)
        in
          ENV
            {
             varE = varE,
             tyE = tyE,
             strE = 
             STR
               (SymbolEnv.insert
                  (envMap, strsymbol, {env=newEnv, strKind=strKind}))
            }
        end


